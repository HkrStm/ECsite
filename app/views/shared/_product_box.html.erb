<div class="
<% if current_page?(controller: 'products', action: 'show') %> col-md-3 col-sm-6
<% else current_page?(controller: 'categories', action: 'show') %> col-sm-4
<% end %> col-xs-12">
  <div class="productBox">
    <%= link_to(potepan_product_path(product.id)) do %>
      <div class="productImage clearfix">
        <%= image_tag(product.display_image.attachment, :alt => "products-img") %>
      </div>
      <div class="productCaption clearfix">
        <h5><%= product.name %></h5>
        <h3><%= product.display_price %></h3>
      </div>
    <% end %>
  </div>
</div>
